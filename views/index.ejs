<a class="btn btn-primary" href="/view" role="button">View</a>  
<table class="table">
  <tr>
      <td class="bg-info text-danger">Name</td>
      <td class="bg-info text-danger">Age</td>
      <td class="bg-info text-danger">Surname</td>
      <td class="bg-info text-danger">Action</td>
  </tr>
  <tr>
  <% people.forEach(function(people){ %>        
            <td><%= people.name %></td>
            <td><%= people.age %></td>
            <td><%= people.surname %></td>
            <td><a class="btn btn-danger" href="/delete/<%= people.col_id %>" role="button">Delete</a>
            <a class="btn btn-warning" href="/edit/<%= people.col_id %>" role="button">Edit</a></td>
  </tr>    
  <% }) %> 
</table>  

<div id="demo">
  result here
</div>

<form>
  <input type="text" id="naame" required>
<input type="number" id="age" required>
<input type="text" id="surname" required>

<button type="button" class="btn btn-info"onclick="loadDoc()">Save</button>
<button type="reset" class="btn-danger">Reset</button>

</form>

<script>
  
  function loadDoc() {    
    var name = $("#naame").val();
    var age = $("#age").val();
    var surname = $("#surname").val();
    if(name =='' || age =='' || surname ==''){
      return false;
    } else {
        $("#naame").val('');
        $("#age").val('');
        $("#surname").val('');
        $.ajax({
            url: "/ajax",
            type: "POST",                      
            data: {"name":name, "age":age, "surname":surname},
            success: function(res){},
            error: function(error){
                 console.log("Error:");
                 console.log(error);
            }
        });
    }    
  }
</script>

 

